<Page x:Class="GoShip.Views.CartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:av="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="av" 
      Title="GoShip - Корзина" 
      Height="1000" 
      Width="1600">
    <Grid Background="White">
        <!-- Верхняя панель -->
        <Border BorderBrush="#FFABABAB" BorderThickness="1" Margin="20,10,20,930" Height="60" CornerRadius="10">
            <Grid>
                <Button Style="{DynamicResource ButtonStyle1}"
                        Content="Корзина" 
                        Width="100" 
                        Height="40" 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Center" 
                        Margin="20,0,0,0"
                        Click="Cart_Click"/>

                <TextBlock FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="{StaticResource TextColor}"
                           HorizontalAlignment="Left" 
                           VerticalAlignment="Center" 
                           Margin="150,0,0,0" 
                           Text="Сумма корзины: "/>
                <TextBlock FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="{StaticResource TextColor}"
                           HorizontalAlignment="Left" 
                           VerticalAlignment="Center" 
                           Margin="350,0,0,0" 
                           Text="{Binding CartTotal, StringFormat={}{0} руб.}"/>
                <Button Style="{DynamicResource ButtonStyle1}"
                        Content="Оформить заказ" 
                        Width="150" 
                        Height="40" 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Center" 
                        Margin="734,0,0,0"
                        Click="Checkout_Click"/>
                <Button Style="{DynamicResource ButtonStyle1}"
                        Content="Каталог" 
                        Width="100" 
                        Height="40" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Center" 
                        Margin="0,0,150,0"
                        Click="Catalog_Click"/>
                <Button Style="{DynamicResource ButtonStyle1}"
                        Content="Поддержка" 
                        Width="100" 
                        Height="40" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Center" 
                        Margin="0,0,20,0"
                        Click="Support_Click"/>
            </Grid>
        </Border>

        <!-- Основной контент -->
        <Grid Margin="0,80,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Корзина -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" Margin="50,20,50,20">
                <ItemsControl ItemsSource="{Binding CartItems}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical"/>
                            <!-- Вертикальное расположение -->
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="10" Style="{StaticResource FadeInStyle}">
                                <Rectangle Style="{DynamicResource RectangleStyle1}" 
                                           Height="250"/>
                                <!-- Уменьшенная высота -->
                                <!-- Внутренний Grid для размещения элементов внутри Rectangle -->
                                <Grid Margin="20,-230,20,0" Height="210">
                                    <!-- Скорректированные высота и отступ -->
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <!-- Левая часть для картинки -->
                                        <ColumnDefinition Width="*" />
                                        <!-- Центральная часть для текста -->
                                        <ColumnDefinition Width="Auto" />
                                        <!-- Правая часть для кнопки -->
                                    </Grid.ColumnDefinitions>

                                    <!-- Картинка слева (увеличенная) -->
                                    <Image Grid.Column="0" 
                                           Source="{Binding Product.ImageUrl}" 
                                           Height="200" 
                                           Width="150" 
                                           Margin="0,0,10,0"
                                           VerticalAlignment="Center"/>

                                    <!-- Текстовая информация в центре -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock FontSize="20" 
                                                   FontWeight="Bold" 
                                                   Foreground="{StaticResource TextColor}"
                                                   HorizontalAlignment="Left" 
                                                   Margin="0,0,0,5" 
                                                   Text="{Binding Product.Name}"/>
                                        <TextBlock FontSize="16" 
                                                   Foreground="{StaticResource TextColor}"
                                                   HorizontalAlignment="Left" 
                                                   Margin="0,0,0,5" 
                                                   Text="{Binding Quantity, StringFormat=Количество: {0}}"/>
                                        <TextBlock FontSize="16" 
                                                   Foreground="{StaticResource TextColor}"
                                                   HorizontalAlignment="Left" 
                                                   Margin="0,0,0,5" 
                                                   Text="{Binding Product.Calories, StringFormat=ккал: {0}}"/>
                                        <TextBlock FontSize="16" 
                                                   Foreground="{StaticResource TextColor}"
                                                   HorizontalAlignment="Left" 
                                                   Margin="0,0,0,5" 
                                                   Text="{Binding Product.Proteins, StringFormat=белки: {0}}"/>
                                        <TextBlock FontSize="16" 
                                                   Foreground="{StaticResource TextColor}"
                                                   HorizontalAlignment="Left" 
                                                   Margin="0,0,0,5" 
                                                   Text="{Binding Product.Fats, StringFormat=жиры: {0}}"/>
                                        <TextBlock FontSize="16" 
                                                   Foreground="{StaticResource TextColor}"
                                                   HorizontalAlignment="Left" 
                                                   Margin="0,0,0,5" 
                                                   Text="{Binding Product.Carbohydrates, StringFormat=углеводы: {0}}"/>
                                        <TextBlock FontSize="20" 
                                                   FontWeight="Bold" 
                                                   Foreground="{StaticResource TextColor}"
                                                   HorizontalAlignment="Left" 
                                                   Margin="0,0,0,5" 
                                                   Text="{Binding Product.Price, StringFormat={}{0} руб.}"/>
                                    </StackPanel>

                                    <!-- Кнопка в правой части -->
                                    <Button Grid.Column="2" 
                                            Style="{DynamicResource ButtonStyle1}"
                                            Content="Убрать" 
                                            Width="100" 
                                            Height="40" 
                                            VerticalAlignment="Center"
                                            Margin="10,0,0,0"
                                            Click="RemoveFromCart_Click"
                                            Tag="{Binding ProductId}"/>
                                </Grid>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Прошлые покупки -->
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" Margin="20,20,50,20">
                <StackPanel>
                    <TextBlock FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="{StaticResource TextColor}"
                               HorizontalAlignment="Left" 
                               Margin="20,0,0,10"
                               Text="Прошлые покупки"/>
                    <ItemsControl ItemsSource="{Binding PastOrders}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="20,10" Style="{StaticResource FadeInStyle}">
                                    <Rectangle Style="{DynamicResource RectangleStyle1}" 
                                               Height="Auto" 
                                               Width="400"/>
                                    <StackPanel Margin="10">
                                        <TextBlock FontSize="18" 
                                                   FontWeight="Bold" 
                                                   Foreground="{StaticResource TextColor}"
                                                   HorizontalAlignment="Center"
                                                   Text="{Binding OrderDate}"/>
                                        <TextBlock FontSize="16" 
                                                   Foreground="{StaticResource TextColor}"
                                                   HorizontalAlignment="Center"
                                                   Text="{Binding Total, StringFormat=Сумма: {0} руб.}"/>
                                        <TextBlock FontSize="16" 
                                                   Foreground="{StaticResource TextColor}"
                                                   HorizontalAlignment="Center"
                                                   Text="{Binding Address}"/>
                                        <ItemsControl ItemsSource="{Binding Items}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Margin="10,0,0,0">
                                                        <TextBlock FontSize="16" 
                                                                   Foreground="{StaticResource TextColor}"
                                                                   HorizontalAlignment="Center"
                                                                   Text="{Binding ProductName}"/>
                                                        <TextBlock FontSize="16" 
                                                                   Foreground="{StaticResource TextColor}"
                                                                   HorizontalAlignment="Center"
                                                                   Text="{Binding Quantity, StringFormat=Количество: {0}}"/>
                                                        <TextBlock FontSize="16" 
                                                                   Foreground="{StaticResource TextColor}"
                                                                   HorizontalAlignment="Center"
                                                                   Text="{Binding ProductPrice, StringFormat=Цена: {0} руб.}"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>