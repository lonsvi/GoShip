<Page x:Class="GoShip.Views.CartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:av="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="av" 
      Title="GoShip - Корзина" 
      Height="1000" 
      Width="1600">
    <Page.Resources>
        <!-- Стили для кнопок -->
        <SolidColorBrush x:Key="Button.MouseOver.Background" Color="#FFBEE6FD"/>
        <SolidColorBrush x:Key="Button.MouseOver.Border" Color="#FF3C7FB1"/>
        <SolidColorBrush x:Key="Button.Pressed.Background" Color="#FFC4E5F6"/>
        <SolidColorBrush x:Key="Button.Pressed.Border" Color="#FF2C628B"/>
        <SolidColorBrush x:Key="Button.Disabled.Background" Color="#FFF4F4F4"/>
        <SolidColorBrush x:Key="Button.Disabled.Border" Color="#FFADB2B5"/>
        <SolidColorBrush x:Key="Button.Disabled.Foreground" Color="#FF838383"/>
        <Style x:Key="ButtonStyle1" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" SnapsToDevicePixels="true" CornerRadius="7,7,7,7">
                            <ContentPresenter x:Name="contentPresenter" Focusable="False" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Background" TargetName="border" Value="{StaticResource Button.MouseOver.Background}"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource Button.MouseOver.Border}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="true">
                                <Setter Property="Background" TargetName="border" Value="{StaticResource Button.Pressed.Background}"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource Button.Pressed.Border}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Background" TargetName="border" Value="{StaticResource Button.Disabled.Background}"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource Button.Disabled.Border}"/>
                                <Setter Property="TextElement.Foreground" TargetName="contentPresenter" Value="{StaticResource Button.Disabled.Foreground}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Стиль для прямоугольников (контейнеров блюд) -->
        <Style x:Key="RectangleStyle1" TargetType="{x:Type Rectangle}">
            <Setter Property="RadiusX" Value="7"/>
            <Setter Property="RadiusY" Value="7"/>
            <Setter Property="Stroke" Value="Black"/>
            <Setter Property="StrokeThickness" Value="3"/>
        </Style>
    </Page.Resources>
    <Grid Background="White">
        <!-- Верхняя панель -->
        <Button Style="{DynamicResource ButtonStyle1}"
                Content="Корзина" 
                Width="85" 
                Height="30" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Margin="10,10,0,0"
                Click="Cart_Click"/>

        <TextBlock FontSize="24" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Top" 
                   Margin="113,9,0,0" 
                   Width="254"
                   Text="Сумма корзины: "/>
        <TextBlock FontSize="24" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Top" 
                   Margin="381,8,0,0" 
                   Width="116"
                   Text="{Binding CartTotal, StringFormat={}{0} руб.}"/>
        <Button Style="{DynamicResource ButtonStyle1}"
                Content="Оформить заказ" 
                Width="150" 
                Height="30" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Top" 
                Margin="0,5,680,0"
                Click="Checkout_Click"/>
        <Button Style="{DynamicResource ButtonStyle1}"
                Content="Каталог" 
                Width="85" 
                Height="30" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Top" 
                Margin="0,10,100,0"
                Click="Catalog_Click"/>
        <Button Style="{DynamicResource ButtonStyle1}"
                Content="Поддержка" 
                Width="85" 
                Height="30" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Top" 
                Margin="0,10,10,0"
                Click="Support_Click"/>

        <!-- Основной контент -->
        <Grid Margin="0,50,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <!-- Корзина -->
                <ColumnDefinition Width="1*"/>
                <!-- Прошлые покупки -->
            </Grid.ColumnDefinitions>

            <!-- Сетка корзины с прокруткой -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" Margin="85,55,85,0">
                <ItemsControl ItemsSource="{Binding CartItems}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" Width="900"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Width="314" Margin="10">
                                <!-- Прямоугольник-контейнер для блюда -->
                                <Rectangle Style="{DynamicResource RectangleStyle1}" 
                                           Height="366" 
                                           Width="314"/>
                                <!-- Изображение блюда -->
                                <Image Source="{Binding Product.ImageUrl}" 
                                       Height="300" 
                                       Width="300" 
                                       Margin="0,-350,0,0"/>
                                <!-- Название блюда -->
                                <TextBlock FontSize="24" 
                                           FontWeight="Bold" 
                                           HorizontalAlignment="Left" 
                                           Margin="10,20,0,0" 
                                           Text="{Binding Product.Name}"/>
                                <!-- Калории -->
                                <TextBlock FontSize="18" 
                                           HorizontalAlignment="Left" 
                                           Margin="10,5,0,0" 
                                           Text="{Binding Product.Calories, StringFormat=ккал: {0}}"/>
                                <!-- Белки -->
                                <TextBlock FontSize="18" 
                                           HorizontalAlignment="Left" 
                                           Margin="10,5,0,0" 
                                           Text="{Binding Product.Proteins, StringFormat=белки: {0}}"/>
                                <!-- Жиры -->
                                <TextBlock FontSize="18" 
                                           HorizontalAlignment="Left" 
                                           Margin="10,5,0,0" 
                                           Text="{Binding Product.Fats, StringFormat=жиры: {0}}"/>
                                <!-- Углеводы -->
                                <TextBlock FontSize="18" 
                                           HorizontalAlignment="Left" 
                                           Margin="10,5,0,0" 
                                           Text="{Binding Product.Carbohydrates, StringFormat=углеводы: {0}}"/>
                                <!-- Цена -->
                                <TextBlock FontSize="24" 
                                           FontWeight="Bold" 
                                           HorizontalAlignment="Left" 
                                           Margin="10,5,0,0" 
                                           Text="{Binding Product.Price, StringFormat={}{0} руб.}"/>
                                <!-- Кнопка "Убрать" -->
                                <Button Style="{DynamicResource ButtonStyle1}"
                                        Content="Убрать" 
                                        Width="141" 
                                        Height="30" 
                                        HorizontalAlignment="Left" 
                                        Margin="150,5,0,0"
                                        Click="RemoveFromCart_Click"
                                        Tag="{Binding Id}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Прошлые покупки -->
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" Margin="0,55,85,0">
                <StackPanel>
                    <TextBlock FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Left" 
                               Margin="10,0,0,10"
                               Text="Прошлые покупки"/>
                    <ItemsControl ItemsSource="{Binding PastOrders}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="10">
                                    <TextBlock FontSize="18" 
                                               FontWeight="Bold" 
                                               Text="{Binding OrderDate}"/>
                                    <TextBlock FontSize="16" 
                                               Text="{Binding Product.Name}"/>
                                    <TextBlock FontSize="16" 
                                               Text="{Binding Product.Price, StringFormat=Цена: {0} руб.}"/>
                                    <TextBlock FontSize="16" 
                                               Text="{Binding Address}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>