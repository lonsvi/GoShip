<Page x:Class="GoShip.Views.CheckoutPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:av="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="av" 
      Title="GoShip - Оформление заказа" 
      Height="1000" 
      Width="1600">
    <Grid Background="White" x:Name="MainContentGrid">
        <!-- Верхняя панель -->
        <Border BorderBrush="#FFABABAB" BorderThickness="1" Margin="20,10,20,930" Height="60" CornerRadius="10">
            <Grid>
                <Button Style="{DynamicResource ButtonStyle1}"
                        Content="Корзина" 
                        Width="100" 
                        Height="40" 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Center" 
                        Margin="20,0,0,0"
                        Click="Cart_Click"/>
                <TextBlock FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="{StaticResource TextColor}"
                           HorizontalAlignment="Left" 
                           VerticalAlignment="Center" 
                           Margin="150,0,0,0" 
                           Text="Сумма корзины: "/>
                <TextBlock FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="{StaticResource TextColor}"
                           HorizontalAlignment="Left" 
                           VerticalAlignment="Center" 
                           Margin="350,0,0,0" 
                           Text="{Binding CartTotal, StringFormat={}{0} руб.}"/>
                <TextBlock FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="{StaticResource TextColor}"
                           Text="Оформление заказа"
                           Margin="699,9,619,12"/>
                <Button Style="{DynamicResource ButtonStyle1}"
                        Content="Каталог" 
                        Width="100" 
                        Height="40" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Center" 
                        Margin="0,0,150,0"
                        Click="Catalog_Click"/>
                <Button Style="{DynamicResource ButtonStyle1}"
                        Content="Поддержка" 
                        Width="100" 
                        Height="40" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Center" 
                        Margin="0,0,20,0"
                        Click="Support_Click"/>
            </Grid>
        </Border>

        <!-- Основной контент -->
        <Grid Margin="0,80,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Левая колонка: адрес и данные клиента -->
            <StackPanel Grid.Column="0" Margin="50,0,20,0" Style="{StaticResource FadeInStyle}">
                <Border BorderBrush="#FFABABAB" BorderThickness="1" CornerRadius="10" HorizontalAlignment="Center" Width="300">
                    <StackPanel Margin="10">
                        <TextBlock FontSize="18" 
                                   Foreground="{StaticResource TextColor}"
                                   Text="Адрес доставки"/>
                        <TextBox Style="{DynamicResource TextBoxStyle1}" 
                                 x:Name="AddressTextBox" 
                                 Height="40" 
                                 Margin="0,5,0,10"/>
                    </StackPanel>
                </Border>

                <Border BorderBrush="#FFABABAB" BorderThickness="1" CornerRadius="10" HorizontalAlignment="Center" Width="300" Margin="0,10,0,0">
                    <StackPanel Margin="10">
                        <TextBlock FontSize="18" 
                                   Foreground="{StaticResource TextColor}"
                                   Text="Имя"/>
                        <TextBox Style="{DynamicResource TextBoxStyle1}" 
                                 x:Name="NameTextBox" 
                                 Height="40" 
                                 Margin="0,5,0,10"/>
                    </StackPanel>
                </Border>

                <Border BorderBrush="#FFABABAB" BorderThickness="1" CornerRadius="10" HorizontalAlignment="Center" Width="300" Margin="0,10,0,0">
                    <StackPanel Margin="10">
                        <TextBlock FontSize="18" 
                                   Foreground="{StaticResource TextColor}"
                                   Text="Email"/>
                        <TextBox Style="{DynamicResource TextBoxStyle1}" 
                                 x:Name="EmailTextBox" 
                                 Height="40" 
                                 Margin="0,5,0,10"/>
                    </StackPanel>
                </Border>

                <Border BorderBrush="#FFABABAB" BorderThickness="1" CornerRadius="10" HorizontalAlignment="Center" Width="300" Margin="0,10,0,0">
                    <StackPanel Margin="10">
                        <TextBlock FontSize="18" 
                                   Foreground="{StaticResource TextColor}"
                                   Text="К какому времени привезти"/>
                        <TextBox Style="{DynamicResource TextBoxStyle1}" 
                                 x:Name="DeliveryTimeTextBox" 
                                 Height="40" 
                                 Margin="0,5,0,10"/>
                    </StackPanel>
                </Border>

                <Button Style="{DynamicResource ButtonStyle1}"
                        Content="Запомнить" 
                        Width="100" 
                        Height="40" 
                        HorizontalAlignment="Center" 
                        Margin="0,20,0,0"
                        Click="SaveDetails_Click"/>
            </StackPanel>

            <!-- Правая колонка: данные карты -->
            <StackPanel Grid.Column="1" Margin="20,0,50,0" Style="{StaticResource FadeInStyle}">
                <Border BorderBrush="#FFABABAB" BorderThickness="1" CornerRadius="10" HorizontalAlignment="Center" Width="300">
                    <StackPanel Margin="10">
                        <TextBlock FontSize="18" 
                                   Foreground="{StaticResource TextColor}"
                                   Text="Номер карты"/>
                        <TextBox Style="{DynamicResource TextBoxStyle1}" 
                                 x:Name="CardNumberTextBox" 
                                 Height="40" 
                                 Margin="0,5,0,10"/>
                    </StackPanel>
                </Border>

                <Border BorderBrush="#FFABABAB" BorderThickness="1" CornerRadius="10" HorizontalAlignment="Center" Width="300" Margin="0,10,0,0">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock FontSize="18" 
                                       Foreground="{StaticResource TextColor}"
                                       Text="Дата/Год"/>
                            <TextBox Style="{DynamicResource TextBoxStyle1}" 
                                     x:Name="CardDateTextBox" 
                                     Height="40" 
                                     Margin="0,5,0,10"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <TextBlock FontSize="18" 
                                       Foreground="{StaticResource TextColor}"
                                       Text="CVV"/>
                            <TextBox Style="{DynamicResource TextBoxStyle1}" 
                                     x:Name="CvvTextBox" 
                                     Height="40" 
                                     Margin="0,5,0,10"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border BorderBrush="#FFABABAB" BorderThickness="1" CornerRadius="10" HorizontalAlignment="Center" Width="300" Margin="0,10,0,0">
                    <StackPanel Margin="10">
                        <TextBlock FontSize="18" 
                                   Foreground="{StaticResource TextColor}"
                                   Text="Комментарий"/>
                        <TextBox Style="{DynamicResource TextBoxStyle1}" 
                                 x:Name="CommentTextBox" 
                                 Height="100" 
                                 Margin="0,5,0,10"
                                 AcceptsReturn="True"/>
                    </StackPanel>
                </Border>

                <Button Style="{DynamicResource ButtonStyle1}"
                        Content="Оформить" 
                        Width="100" 
                        Height="40" 
                        HorizontalAlignment="Center" 
                        Margin="0,20,0,0"
                        Click="ConfirmOrder_Click"/>
            </StackPanel>
        </Grid>

        <!-- Всплывающее окно с анимацией -->
        <Grid x:Name="OverlayGrid" Background="#80000000" Visibility="Collapsed">
            <Border Background="White" 
                    BorderBrush="#FFABABAB" 
                    BorderThickness="1" 
                    Width="400" 
                    Height="300" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center" 
                    CornerRadius="10">
                <Border.RenderTransform>
                    <ScaleTransform ScaleX="0.8" ScaleY="0.8"/>
                </Border.RenderTransform>
                <Border.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                                                 From="0" To="1" Duration="0:0:0.5"/>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)" 
                                                 From="0.8" To="1" Duration="0:0:0.5"/>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)" 
                                                 From="0.8" To="1" Duration="0:0:0.5"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Border.Triggers>
                <StackPanel Margin="20">
                    <TextBlock FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="{StaticResource TextColor}"
                               Text="Заказ оформлен"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>
                    <Image x:Name="QrCodeImage" 
                           Width="150" 
                           Height="150"/>
                    <TextBlock FontSize="16" 
                               x:Name="DeliveryTimeDisplay"
                               Foreground="{StaticResource TextColor}"
                               Text="Заказ будет доставлен к: 18:10"
                               HorizontalAlignment="Center"
                               Margin="0,10,0,5"/>
                    <TextBlock FontSize="16" 
                               Foreground="{StaticResource TextColor}"
                               Text="{Binding LastOrderTotal, StringFormat=Сумма заказа: {0} руб.}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,5"/>
                    <TextBlock FontSize="16" 
                               x:Name="AddressDisplay"
                               Foreground="{StaticResource TextColor}"
                               Text="Адрес: Ул. Катя, Дом 5, кв 32"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>