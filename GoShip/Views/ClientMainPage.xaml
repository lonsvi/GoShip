<Page x:Class="GoShip.Views.ClientMainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:av="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="av" 
      Title="GoShip - Клиент" 
      Height="1000" 
      Width="1600">
    <Grid Background="White">
        <!-- Верхняя панель -->
        <Border BorderBrush="#FFABABAB" BorderThickness="1" Margin="20,10,20,930" Height="60" CornerRadius="10">
            <Grid>
                <Button Style="{DynamicResource ButtonStyle1}"
                        Content="Корзина" 
                        Width="100" 
                        Height="40" 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Center" 
                        Margin="20,0,0,0"
                        Click="Cart_Click"/>
                <TextBlock FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="{StaticResource TextColor}"
                           HorizontalAlignment="Left" 
                           VerticalAlignment="Center" 
                           Margin="150,0,0,0" 
                           Text="Сумма корзины: "/>
                <TextBlock FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="{StaticResource TextColor}"
                           HorizontalAlignment="Left" 
                           VerticalAlignment="Center" 
                           Margin="350,0,0,0" 
                           Text="{Binding CartTotal, StringFormat={}{0} руб.}"/>
                <Button Style="{DynamicResource ButtonStyle1}"
                        Content="Каталог" 
                        Width="100" 
                        Height="40" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Center" 
                        Margin="0,0,150,0"
                        Click="Catalog_Click"/>
                <Button Style="{DynamicResource ButtonStyle1}"
                        Content="Поддержка" 
                        Width="100" 
                        Height="40" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Center" 
                        Margin="0,0,20,0"
                        Click="Support_Click"/>
            </Grid>
        </Border>

        <!-- Каталог -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="50,80,50,20">
            <ItemsControl ItemsSource="{Binding Products}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" Width="1400"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Width="300" Margin="10" Style="{StaticResource FadeInStyle}">
                            <Rectangle Style="{DynamicResource RectangleStyle1}" 
                                       Height="380" 
                                       Width="300"/>
                            <Image Source="{Binding ImageUrl}" 
                                   Height="280" 
                                   Width="260" 
                                   Margin="20,-360,20,0"/>
                            <TextBlock FontSize="20" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource TextColor}"
                                       HorizontalAlignment="Left" 
                                       Margin="20,10,0,0" 
                                       Text="{Binding Name}"/>
                            <TextBlock FontSize="20" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource TextColor}"
                                       HorizontalAlignment="Left" 
                                       Margin="20,5,0,0" 
                                       Text="{Binding Price, StringFormat={}{0} руб.}"/>
                            <Button Style="{DynamicResource ButtonStyle1}"
                                    Content="Добавить" 
                                    Width="100" 
                                    Height="40" 
                                    HorizontalAlignment="Right" 
                                    Margin="0,10,20,10"
                                    Click="AddToCart_Click"
                                    Tag="{Binding Id}"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
