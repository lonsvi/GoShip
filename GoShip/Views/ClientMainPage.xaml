<Page x:Class="GoShip.Views.ClientMainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="GoShip - Клиент">
    <Grid>
        <TabControl>
            <TabItem Header="Каталог">
                <ListView Name="productsListView" ItemsSource="{Binding Products}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Название" DisplayMemberBinding="{Binding Name}"/>
                            <GridViewColumn Header="Цена" DisplayMemberBinding="{Binding Price}"/>
                            <GridViewColumn Header="Калории" DisplayMemberBinding="{Binding Calories}"/>
                            <GridViewColumn Header="Белки" DisplayMemberBinding="{Binding Proteins}"/>
                            <GridViewColumn Header="Жиры" DisplayMemberBinding="{Binding Fats}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
            <TabItem Header="Оформление заказа">
                <StackPanel Margin="20">
                    <TextBlock Text="Оформление заказа" FontSize="20" Margin="0,0,0,20"/>
                    <TextBlock Text="Выберите товар:" Margin="0,0,0,5"/>
                    <ComboBox Name="productComboBox" ItemsSource="{Binding Products}" 
                              DisplayMemberPath="Name" Width="200" Margin="0,0,0,10"/>
                    <TextBlock Text="Адрес доставки:" Margin="0,0,0,5"/>
                    <TextBox Name="txtAddress" Width="200" Margin="0,0,0,10"/>
                    <Button Content="Оформить заказ" Width="100" Click="PlaceOrder_Click"/>
                </StackPanel>
            </TabItem>
            <TabItem Header="Поддержка">
                <TextBlock Text="Чат с поддержкой (в разработке)" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </TabItem>
        </TabControl>
    </Grid>
</Page>