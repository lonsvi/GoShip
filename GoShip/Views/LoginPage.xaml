<Page x:Class="GoShip.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Вход" Height="300" Width="300">
    <Grid Background="White">
        <StackPanel Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Вход" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <TextBlock Text="Логин" Margin="0,0,0,5"/>
            <TextBox Name="txtLogin" Width="200" Margin="0,0,0,10" Background="LightGray" BorderBrush="Black" BorderThickness="1"/>
            <TextBlock Text="Пароль" Margin="0,0,0,5"/>
            <PasswordBox Name="txtPassword" Width="200" Margin="0,0,0,20" Background="LightGray" BorderBrush="Black" BorderThickness="1"/>
            <Button Content="Войти" Width="100" Margin="0,0,0,10" Background="White" BorderBrush="Black" BorderThickness="1" Foreground="Black" Click="Login_Click"/>
            <Button Content="Регистрация" Width="100" Margin="0,0,0,10" Background="White" BorderBrush="Black" BorderThickness="1" Foreground="Black" Click="Register_Click"/>
            <TextBlock Text="Войти как сотрудник" HorizontalAlignment="Center" Margin="0,10,0,0" 
                       MouseLeftButtonDown="EmployeeLogin_Click" Foreground="Blue" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Page>