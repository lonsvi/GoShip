<Page x:Class="GoShip.Views.EmployeeLoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Вход для сотрудников" Height="1000" Width="1600">
    <Grid Background="White">
        <Border BorderBrush="#FFABABAB" BorderThickness="1" Width="400" Height="570" 
                HorizontalAlignment="Center" VerticalAlignment="Center" CornerRadius="10">
            <StackPanel Margin="40" Style="{StaticResource FadeInStyle}">
                <TextBlock Text="Вход как сотрудник" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="{StaticResource TextColor}"
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,40"/>

                <TextBlock Text="Логин" 
                           FontSize="18" 
                           Foreground="{StaticResource TextColor}"
                           Margin="0,0,0,5"/>
                <TextBox Style="{DynamicResource TextBoxStyle1}" 
                         Name="txtLogin" 
                         Height="40" 
                         Margin="0,5,0,10"/>

                <TextBlock Text="Пароль" 
                           FontSize="18" 
                           Foreground="{StaticResource TextColor}"
                           Margin="0,0,0,5"/>
                <PasswordBox Style="{DynamicResource PasswordBoxStyle1}" 
                             Name="txtPassword" 
                             Height="40" 
                             Margin="0,5,0,10"/>

                <Button Style="{DynamicResource ButtonStyle1}" 
                        Content="Войти" 
                        Width="100" 
                        Height="40" 
                        Margin="0,20,0,10"
                        Click="Login_Click"/>

                <Button Style="{DynamicResource ButtonStyle1}" 
                        Content="Назад" 
                        Width="100" 
                        Height="40" 
                        Margin="0,10,0,0"
                        Click="Back_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
